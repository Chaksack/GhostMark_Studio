STORE_CORS=http://localhost:8000,https://docs.medusajs.com
ADMIN_CORS=http://localhost:5173,http://localhost:9000,https://docs.medusajs.com
AUTH_CORS=http://localhost:5173,http://localhost:9000,http://localhost:8000,https://docs.medusajs.com
REDIS_URL=redis://localhost:6379
JWT_SECRET=supersecret
COOKIE_SECRET=supersecret
DATABASE_URL=
DB_NAME=medusa-v2

# --- Google Auth (Medusa Auth module) ---
# Create credentials at https://console.cloud.google.com/apis/credentials
# Authorized redirect URIs must include the Medusa Auth endpoints, for example:
#   http://localhost:9000/auth/customer/google/cb
#   http://localhost:9000/auth/admin/google/cb (optional for admin)

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Callback URLs consumed by @medusajs/auth-google provider
# For local dev with the storefront running at http://localhost:8000, Medusa will
# redirect back to this URL with a token query param after successful login.
AUTH_GOOGLE_STORE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback
# Optional admin callback (only if using Google for Admin authentication)
AUTH_GOOGLE_ADMIN_CALLBACK_URL=http://localhost:5173/api/auth/google/callback

# --- Resend Email Configuration ---
# Get your API key from https://resend.com/api-keys
# This replaces SMTP configuration for better deliverability
RESEND_API_KEY=re_xxxxxxxx
# From email must be from a verified domain in Resend
RESEND_FROM_EMAIL=noreply@yourdomain.com

# --- Support module ---
# Email address to notify when new support tickets or customer replies are created
SUPPORT_ADMIN_EMAIL=support@yourdomain.com

# --- Reviews (Publishable API Key) ---
# Optional: when set, the reviews endpoints require this publishable key via the
# 'x-publishable-api-key' header from the storefront/client.
# Example usage in frontend: set NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY to the same value.
MEDUSA_PUBLISHABLE_KEY=
