# Gmail Notification Configuration
# Add these variables to your .env file

# Gmail credentials (reuse your existing Google OAuth credentials)
AUTH_GOOGLE_CLIENT_ID=your_google_client_id_here
AUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Gmail-specific configuration
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here
GMAIL_USER_EMAIL=your_gmail_address@gmail.com
GMAIL_FROM_NAME="GhostMark Studio"

# Instructions to get Gmail refresh token:
# 1. Go to Google Cloud Console (console.cloud.google.com)
# 2. Enable Gmail API for your project
# 3. Go to OAuth playground (developers.google.com/oauthplayground)
# 4. In settings (gear icon), check "Use your own OAuth credentials"
# 5. Enter your Client ID and Client Secret
# 6. In Step 1, add scope: https://www.googleapis.com/auth/gmail.send
# 7. Click "Authorize APIs" and complete OAuth flow
# 8. In Step 2, click "Exchange authorization code for tokens"
# 9. Copy the refresh_token value to GMAIL_REFRESH_TOKEN above

# Optional: Enable specific features
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_PROVIDER=gmail

# Corporate customer features
ENABLE_CORPORATE_NOTIFICATIONS=true
ENABLE_BULK_ORDER_ALERTS=true